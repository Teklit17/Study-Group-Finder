@model SG_Finder.Models.UserProfile

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="text-center">
    <h2>@ViewData["Title"]</h2>
    <p>Update your profile information below.</p>
</div>

<div class="container my-4">
    <form asp-controller="Profile" asp-action="SaveProfile" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Username">Username:</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Bio">Bio:</label>
            <textarea asp-for="Bio" class="form-control"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <!-- Render the Profile Picture partial view -->
        @await Html.PartialAsync("_ProfilePicture", Model)

        <div class="form-group">
            <label asp-for="SubjectsInput">Subjects (comma-separated):</label>
            <input asp-for="SubjectsInput" class="form-control" />
            <span asp-validation-for="SubjectsInput" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StudyGoals">Study Goals:</label>
            <input asp-for="StudyGoals" class="form-control" />
            <span asp-validation-for="StudyGoals" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StudyHabits">Study Habits:</label>
            <input asp-for="StudyHabits" class="form-control" />
            <span asp-validation-for="StudyHabits" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AvailabilityInput">Availability (comma-separated):</label>
            <input asp-for="AvailabilityInput" class="form-control" />
            <span asp-validation-for="AvailabilityInput" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Profile")">Cancel</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
