@model IEnumerable<SG_Finder.Models.Notification>

<h2>Your Notifications</h2>

<table class="table">
    <thead>
    <tr>
        <th>Type</th>
        <th>Content</th>
        <th>Created Date</th>
        <th>Read Status</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var notification in Model)
    {
        <tr>
            <td>@notification.Type</td>
            <td>@notification.Content</td>
            <td>@notification.CreatedDate.ToString("g")</td>
            <td>@(notification.IsRead ? "Read" : "Unread")</td>
            <td>
                @if (!notification.IsRead)
                {
                    <a asp-action="MarkAsRead" asp-route-id="@notification.NotificationID" class="btn btn-primary">Mark as Read</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>