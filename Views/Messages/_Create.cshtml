@model SG_Finder.Models.Message

@{
    ViewData["Title"] = "Send Message";
}

<h2>Send Message</h2>

<form asp-action="CreateMessage" method="post">
    @* Hidden fields for sender and receiver IDs *@
    <input type="hidden" asp-for="SenderID" />
    <input type="hidden" asp-for="ReceiverID" />

    <div class="form-group">
        <label for="Content">Message Content</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    @* Anti-forgery token *@
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">Send Message</button>
</form>